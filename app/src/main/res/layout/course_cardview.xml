<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_idname"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="JAVA - 01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_date"
            app:layout_constraintTop_toBottomOf="@id/txt_idname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="16/02/2021"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_chuyenNganh"
            android:text="CNTT"
            app:layout_constraintTop_toBottomOf="@id/txt_idname"
            app:layout_constraintLeft_toRightOf="@id/txt_date"/>
        <TextView
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/txt_chuyenNganh"
            app:layout_constraintTop_toBottomOf="@id/txt_idname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_check"
            android:text="isActivated"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>